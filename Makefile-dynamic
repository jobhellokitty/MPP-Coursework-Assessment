MF=	Makefile-dynamic

CC=	gcc
CFLAGS=	-O3 -Wall

LFLAGS= $(CFLAGS)

EXE=	sandpile-dynamic

INC= \
	sandpile.h \
        arraymalloc.h

SRC= \
	sandpile-dynamic.c \
	sandio.c \
        arraymalloc.c


#
# No need to edit below this line
#

.SUFFIXES:
.SUFFIXES: .c .o

OBJ=	$(SRC:.c=.o)

.c.o:
	$(CC) $(CFLAGS) -c $<

all:	$(EXE)

$(OBJ):	$(INC)

$(EXE):	$(OBJ)
	$(CC) $(LFLAGS) -o $@ $(OBJ)

$(OBJ):	$(MF)

clean:
	rm -f $(EXE) $(OBJ) core
